<?xml version="1.0" encoding="utf-8"?>

<com.rohos.logon1.ListRowView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:gravity="top"
    android:minHeight="50dp"
    android:measureWithLargestChild="false"
    android:paddingTop="5dp">

    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:baselineAligned="true">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignBottom="@+id/aboutText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView android:id="@+id/recordName" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="30dp"
        android:gravity="top"
        android:maxHeight="30dp"
        android:longClickable="true"
        android:singleLine="false"
        android:layout_marginLeft="8dp" />

    <TextView android:id="@+id/hostName" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
           android:height="30dp"
            android:gravity="top"
            android:maxHeight="30dp"
            android:longClickable="true"
            android:singleLine="false"
            android:layout_marginLeft="8dp" />

    </LinearLayout>

</com.rohos.logon1.ListRowView>